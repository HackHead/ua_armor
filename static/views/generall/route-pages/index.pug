style().
  body * {
    font-family:'Montserrat';
  }
  [v-cloak]{opacity : 0; transition: all .4s linear}
  img {
    max-width: 100%;
    height: auto;
    vertical-align: middle;
    display: inline-block;
  }

  /* Main CSS */
  .grid-wrapper > div {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .grid-wrapper > div > img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 2px;
    transition: all .4s linear;

  }

  .grid-wrapper {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    grid-auto-rows: 200px;
    grid-auto-flow: dense;
  }
  .grid-wrapper .wide {
    grid-column: span 2;
  }
  .grid-wrapper .tall {
    grid-row: span 2;
  }
  .grid-wrapper .big {
    grid-column: span 2;
    grid-row: span 2;
  }
  @media screen and (max-width: 768px){
    .grid-wrapper .wide {
      grid-column: span 2;
      grid-row: span 2;
    }
    .grid-wrapper .tall {
      grid-column: span 2;
      grid-row: span 2;
    }
    .grid-wrapper .big {
      grid-column: span 2;
      grid-row: span 2;
    }
    .portfolio__grid-item {
      grid-column: span 2;
      grid-row: span 2;
    }
  }
  @media screen and (max-width: 1749px){
    .grid-wrapper .wide {
      grid-column: span 3;
    }
    .grid-wrapper .tall {
      grid-column: span 3;
    }
    .grid-wrapper .big {
      grid-column: span 3;
      grid-row: span 2;
    }
    .portfolio__grid-item {
      grid-column: span 1;
      grid-row: span 1;
    }
    .portfolio__grid-item:nth-of-type(14) {
      grid-row: span 3;
    }
  }
   @media screen and (max-width: 1500px){
    .grid-wrapper .wide {
      grid-column: span 2;
      grid-row: span 1;
    }
    .grid-wrapper .tall {
      grid-column: span 2;
      
    }
    .grid-wrapper .big {
      grid-column: span 3;
      grid-row: span 3;
    }
    .portfolio__grid-item {
      grid-column: span 1;
      grid-row: span 1;
    }
    .portfolio__grid-item:nth-of-type(14) {
      grid-row: span 4;
    }
  }
  @media screen and (max-width: 1250px){
    .grid-wrapper .wide {
      grid-column: span 2;
      grid-row: span 1;
    }
    .grid-wrapper .tall {
      grid-column: span 2;
      
    }
    .grid-wrapper .big {
      grid-column: span 2;
      grid-row: span 2;
    }
    .portfolio__grid-item {
      grid-column: span 2;
      grid-row: span 1;
    }
    .portfolio__grid-item:nth-of-type(14) {
      grid-row: span 3;
    }
  }
  .portfolio__grid-item {
    position: relative;
    cursor: pointer;
    overflow: hidden;
  }
  .portfolio__grid-item a {
    display: block;
    position: absolute;
    padding: 1em 2em 1em;
    background: transparent;
    border: solid 2px #f8f8f8;
    border-radius: 4px;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    font-weight: 600;
    color: #f8f8f8;
    z-index: 9999;
    opacity: 0;
    transition: all .4s linear;
  }
  .portfolio__grid-item:hover a {
    opacity: 1;
    transition: all .4s linear;
    background: rgba(255, 255, 255, .2);
    color: #f8f8f8 !important;
  }
  @media screen and (max-width: 768px){
    .portfolio__grid-item a {
      opacity: 1;
    }
  }
  .portfolio__grid-item:hover::after {
    background: rgba(0, 0, 0, .3);
    transition: all .4s linear;
  }
  .portfolio__grid-item:hover img {
    transform: scale(1.05);
    transition: all .4s linear;
  }
  .portfolio__grid-item::after {
    display: block;
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .5);
    transition: all .4s linear;
  }

