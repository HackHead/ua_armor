include ../components/head.pug
.layout-wrapper.layout-content-navbar
  .layout-container
    include ../components/navigation.pug
    .layout-page
      include ../components/navbar.pug
      .content-wrapper
        // Content
        .container-xxl.flex-grow-1.container-p-y
          if data.orders
            h4.fw-bold.py-3.mb-4
              span.text-muted.fw-light Комментарии /
              |  Список комментариев
            hr.my-5
            h5.mb-4 Список
            .table-responsive.text-nowrap
              table.table.card-table
                thead
                  tr
                    th Название товара
                    th Дата
                    th Имя пользователя
                    th E-Mail
                    th Действия
                tbody.table-border-bottom-0
                  each comment in data.comments
                    tr
                      td
                        i.fab.fa-angular.fa-lg.text-danger.me-3
                        strong 
                          a( target="_blank" href='/store/' + comment.product.slug) #{comment.product.name}
                      td #{comment.date.toLocaleString('ru-RU', { timeZone: 'UTC' })}
                      td
                        ul.list-unstyled.users-list.m-0.avatar-group.d-flex.align-items-center
                          li.avatar.avatar-xs.pull-up(data-bs-toggle='tooltip' data-popup='tooltip-custom' data-bs-placement='top' title='Lilian Fuller') #{comment.name}
                      //- td
                      //-   if comment.rate === '1'
                      //-     span.badge.bg-label-danger.me-1
                      //-         <i class='bx bxs-star'></i>
                      //-   else if comment.rate === '2'
