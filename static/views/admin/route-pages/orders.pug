                      //-         <i class='bx bxs-star'></i>
                      //-         <i class='bx bxs-star'></i>
                      //-   if comment.rate === '4'
                      //-     span.badge.bg-label-danger.me-1
                      //-         <i class='bx bxs-star'></i>
                      //-         <i class='bx bxs-star'></i>
                      //-         <i class='bx bxs-star'></i>
                      //-         <i class='bx bxs-star'></i>
                      //-   if comment.rate === '5'
                      //-     span.badge.bg-label-success.me-1
                      //-         <i class='bx bxs-star'></i>
                      //-         <i class='bx bxs-star'></i>
                      //-         <i class='bx bxs-star'></i>
                      //-         <i class='bx bxs-star'></i>
                      //-         <i class='bx bxs-star'></i>
                      td
                        span #{comment.email}
                      td
                        .dropdown
                          form(action="/comment/delete/" + comment._id method="GET") 
                            button.btn.p-0.dropdown-toggle.hide-arrow(type='button' data-bs-toggle='dropdown')
                              i.bx.bx-dots-vertical-rounded
                            .dropdown-menu
                              button.dropdown-item(type="submit")
                                i.bx.bx-trash.me-1
                                |  Удалить
            .row.mb-5 
              .demo-inline-spacing
                nav(aria-label='Page navigation')
                  ul.pagination.justify-content-center
                    li.page-item.prev
                      a.page-link(href='javascript:void(0);')
                        i.tf-icon.bx.bx-chevrons-left
                    li.page-item
                      a.page-link(href='javascript:void(0);') 1
                    li.page-item
                      a.page-link(href='javascript:void(0);') 2
                    li.page-item.active
                      a.page-link(href='javascript:void(0);') 3
                    li.page-item
                      a.page-link(href='javascript:void(0);') 4
                    li.page-item
                      a.page-link(href='javascript:void(0);') 5
                    li.page-item.next
                      a.page-link(href='javascript:void(0);')
                        i.tf-icon.bx.bx-chevrons-right
          else 
            p(style="text-align: center; margin: 200px auto") На сайте пока нет комментариев
        .content-backdrop.fade
