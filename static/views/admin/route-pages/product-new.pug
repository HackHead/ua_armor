              // HTML5 Inputs
              .card.mb-4
                h5.card-header HTML5 Inputs
                .card-body
                  .mb-3.row
                    label.col-md-2.col-form-label(for='html5-text-input') Text
                    .col-md-10
                      input#html5-text-input.form-control(type='text' value='Sneat')
                  .mb-3.row
                    label.col-md-2.col-form-label(for='html5-search-input') Search
                    .col-md-10
                      input#html5-search-input.form-control(type='search' value='Search ...')
                  .mb-3.row
                    label.col-md-2.col-form-label(for='html5-email-input') Email
                    .col-md-10
                      input#html5-email-input.form-control(type='email' value='john@example.com')
                  .mb-3.row
                    label.col-md-2.col-form-label(for='html5-url-input') URL
                    .col-md-10
                      input#html5-url-input.form-control(type='url' value='https://themeselection.com')
                  .mb-3.row
                    label.col-md-2.col-form-label(for='html5-tel-input') Phone
