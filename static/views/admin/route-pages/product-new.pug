                    .col-md-10
                      input#html5-week-input.form-control(type='week' value='2021-W25')
                  .mb-3.row
                    label.col-md-2.col-form-label(for='html5-time-input') Time
                    .col-md-10
                      input#html5-time-input.form-control(type='time' value='12:30:00')
                  .mb-3.row
                    label.col-md-2.col-form-label(for='html5-color-input') Color
