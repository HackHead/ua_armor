                  .mb-3.row
                    label.col-md-2.col-form-label(for='html5-datetime-local-input') Datetime
                    .col-md-10
                      input#html5-datetime-local-input.form-control(type='datetime-local' value='2021-06-18T12:30:00')
                  .mb-3.row
                    label.col-md-2.col-form-label(for='html5-date-input') Date
                    .col-md-10
